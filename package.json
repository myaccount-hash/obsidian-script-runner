{
  "name": "obsidian-script-runner",
  "version": "1.0.0",
  "description": "Run Python scripts from .scripts directory in Obsidian",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "esbuild main.ts --bundle --platform=node --external:obsidian --outfile=main.js --format=cjs",
    "dev": "esbuild main.ts --bundle --platform=node --external:obsidian --outfile=main.js --format=cjs --watch"
  },
  "keywords": [
    "obsidian",
    "obsidian-plugin",
    "python",
    "script"
  ],
  "author": "shotawake",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/myaccount-hash/obsidian-script-runner"
  },
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "esbuild": "^0.27.2",
    "obsidian": "^1.11.0",
    "typescript": "^5.9.3"
  }
}
